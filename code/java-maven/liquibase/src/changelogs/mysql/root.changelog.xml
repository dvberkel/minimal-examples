<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
	<preConditions>
		<dbms type="mysql"/>
	</preConditions>
	<changeSet id="1" author="dvberkel">
		<createTable tableName="message">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="content" type="varchar(500)"/>
		</createTable>
	</changeSet>
	<changeSet id="2" author="dvberkel">
		<addColumn tableName="message">
    		<column name="header" type="varchar(50)"/>
		</addColumn>		
	</changeSet>
	<changeSet id="3" author="dvberkel">
		<renameColumn tableName="message" oldColumnName="header" newColumnName="title"/>
	</changeSet>
	<changeSet id="4" author="dvberkel">
	</changeSet>	
</databaseChangeLog>
