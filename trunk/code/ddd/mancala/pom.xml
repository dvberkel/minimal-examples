<?xml version="1.0"?>
<project>

	<modelVersion>4.0.0</modelVersion>

	<groupId>org.effrafax</groupId>
	<artifactId>mancala</artifactId>
	<packaging>pom</packaging>
	<name>mancala</name>
	<version>SNAPSHOT</version>
	<url>http://maven.apache.org</url>

	<modules>
		<module>domain</module>
	</modules>	

	<properties>
		<java.version>1.6</java.version>
		<junit.version>4.5</junit.version>
		<compiler.plugin.version>2.1</compiler.plugin.version>
		<eclipse.plugin.version>2.8</eclipse.plugin.version>
	</properties>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>${junit.version}</version>
				<scope>test</scope>
			</dependency>
			
			<dependency>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>${compiler-plugin.version}</version>
			</dependency>
			
			<dependency>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-eclipse-plugin</artifactId>
					<version>${eclipse.plugin.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<configuration>
					<workspaceCodeStylesURL>http://minimal-examples.googlecode.com/svn/trunk/code/ddd/mancala/src/main/resources/eclipse-formatter</workspaceCodeStylesURL>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
